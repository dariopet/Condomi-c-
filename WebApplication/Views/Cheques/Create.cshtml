@model WebApplication.Cheques


@{
    ViewBag.Title = "Create";
}

<script src="~/AdminLTE/plugins/datepicker/js/bootstrap-datepicker.js"></script>
<link href="~/AdminLTE/plugins/datepicker/css/bootstrap-datepicker3.css" rel="stylesheet" />

<script type="text/javascript">
    $('document').ready(function () {
        $('.datepicker').datepicker({
            autoclose: true,
            format: 'dd/mm/yyyy'
        });
    });
</script>

<div class="modal-header ">
    <a type="button" class="close" data-dismiss="modal" aria-hidden="true" href="">&times;</a>
    <h4 class="modal-title" id="myModalLabel">Agregar</h4>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-body ">
        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <b class="control-label col-md-2">Nº de Cheque</b>
                <div class="col-md-7">
                    @Html.EditorFor(model => model.numCheque, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.numCheque, "", new { @class = "text-danger" })
                </div>
                <b class="control-label col-md-2">EB</b>
                <div class="col-md-1">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.enBlanco)
                        @Html.ValidationMessageFor(model => model.enBlanco, "", new { @class = "text-danger" })
                    </div>
                </div>
         
               
            </div>

            <div class="form-group">
                <b class="control-label col-md-2">Fecha Emitido</b>
                <div class="col-md-4">
                     @Html.TextBoxFor(model => model.fechaEmitido, new { Value = DateTime.Now.ToShortDateString(), @class = "form-control datepicker", @datadateformat = "dd/mm/yyyy", @readonly = true })
                    @Html.ValidationMessageFor(model => model.fechaEmitido, "", new { @class = "text-danger" })
                </div>
                <b class="control-label col-md-2">Fecha de Cobro</b>
                <div class="col-md-4">
                   @Html.TextBoxFor(model => model.fechaCobro, new { Value = DateTime.Now.ToShortDateString(), @class = "form-control datepicker", @datadateformat = "dd/mm/yyyy", @readonly = true })
                    @Html.ValidationMessageFor(model => model.fechaCobro, "", new { @class = "text-danger" })
                </div>
            </div>

           
            <div class="form-group">
                <b class="control-label col-md-2"> Recibí de</b>
                <div class="col-md-10">
                    @Html.DropDownList("idTercero", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.idTercero, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <b class="control-label col-md-2">Banco</b>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.banco, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.banco, "", new { @class = "text-danger" })
                </div>           
                <b class="control-label col-md-2">Monto</b>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.monto, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.monto, "", new { @class = "text-danger" })
                </div>
            </div>


        </div>
    </div>

        <div class="modal-footer">
            <a class="btn btn-warning hidden-print" data-dismiss="modal">Cancelar</a>
            <input class="btn btn-success hidden-print" type="submit" value="Aceptar" id="submit" />
        </div>
}

