@model WebApplication.RolUsuarios


@{
    ViewBag.Title = "Create";
}

<div class="modal-header ">
    <a type="button" class="close" data-dismiss="modal" aria-hidden="true" href="">&times;</a>
    <h4 class="modal-title" id="myModalLabel">Asignar rol</h4>
</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="modal-body "> 
        <div class="form-horizontal">     
      
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.idUsuario)
        
        <div class="form-group">
               
                <b class="control-label col-md-3"> Rol</b>       
               
                <div class="col-md-9">
                    @Html.DropDownList("Name", null, htmlAttributes: new { @class = "form-control" })                 
                </div>
            </div>
        </div>        
    </div>
       
        <div class="modal-footer">
            <a class="btn btn-warning hidden-print" data-dismiss="modal">Cancelar</a>
            <input class="btn btn-success hidden-print" type="submit" value="Aceptar" id="submit" />
        </div>
   }

