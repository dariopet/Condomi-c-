@model IEnumerable<WebApplication.AspNetUsers>
@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Menu {
    <script>
   $(function () {
    var menuItem = $('#left-sidebar-menu-usuarios');
    menuItem.addClass('active');
    var subMenuItem = menuItem.find('#left-sidebar-menu-usuarios');
    subMenuItem.addClass('active');
   });
</script>
<script src="../../Scripts/tablaexportar.js"></script>
}


<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>



<div class="box">
    <div class="box-header">
        <h3 class="box-title"> Lista de usuarios</h3>
       
   


    </div>


    <div class="box-body">
        <p>
            @Html.ActionLink("Nuevo usuario", "Register", "Account", routeValues: null, htmlAttributes: new { data_modal = "", id = "registerLink", @class = "btn btn-success hidden-print" })
        </p>
        <table class="table table-bordered table-striped" id="tabla">
            <thead>
              <tr>
                  <th>
                      activo
                  </th>
           <th>
               Nombre
           </th>          
           <th>
              E-Mail
           </th>
           <th>
               Rol
           </th>
           <th>
            Acciones
            </th>
         </tr>
    </thead>
     <tfoot>
          <tr>
              <th>
                  activo
              </th>
              <th>
                  Nombre
              </th>
              <th>
                  E-Mail
              </th>
              <th>
                  Rol
              </th>
              <th>
                Acciones
              </th>
           </tr>
          </tfoot>
          <tbody>
            @foreach (var item in Model) {
               <tr>
                   <td>
                       1
                   </td>
                       <td>
                              @Html.DisplayFor(modelItem => item.NameIdentifier)
                      </td>
                       <td>
                              @Html.DisplayFor(modelItem => item.Email)
                      </td>
                      
                       <td>
                      @{ 
                          @Html.Raw(Html.Action("GetUsersInRole", "AspNetUsers", new { userid = item.Id }).ToString());
                    }          
                      </td>                
      
                         <td>                          
                        
                         @Html.Raw(@Html.ActionLink("XXX", "AsignarRol", "AspNetUsers", new {id=item.Id }, new { data_modal = "", id = "btnEdit", @class = "btn btn-info", @style = "margin-right:3px; margin-bottom:3px", @title = "Asignar rol" }).ToHtmlString().Replace("XXX", "<i class='fa fa-user'></i>"))                                 
                         @Html.Raw(@Html.ActionLink("XXX", "ResetearPassword", "AspNetUsers", new { id = item.Id }, new { data_modal = "", id = "btnEdit", @class = "btn btn-warning hidden-print", @style = "margin-right:3px; margin-bottom:3px", @title = "Resetear Contraseña" }).ToHtmlString().Replace("XXX", "<i class='fa fa-key'></i>"))


                         
                        
                 </td>
            </tr>
            }
            </tbody>
        </table>
    </div>
</div>
