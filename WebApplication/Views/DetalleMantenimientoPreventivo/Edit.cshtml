@model WebApplication.DetalleMantenimientoPreventivo


@{
    ViewBag.Title = "Edit";
}

<div class="modal-header ">
    <a type="button" class="close" data-dismiss="modal" aria-hidden="true" href="">&times;</a>
    <h4 class="modal-title" id="myModalLabel">Editar</h4>
</div>
 
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body ">
        <div class="form-horizontal">              
         @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.idDetalleMantenimientoPreventivo)

        <div class="form-group">
 
            <b class="control-label col-md-3"> idMantenimientoPreventivo</b>      
           <div class="col-md-9">   
                @Html.DropDownList("idMantenimientoPreventivo", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idMantenimientoPreventivo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
 
            <b class="control-label col-md-3"> idEquipo</b>      
           <div class="col-md-9">   
                @Html.DropDownList("idEquipo", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idEquipo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
 
            <b class="control-label col-md-3"> chequeadoPor</b>      
           <div class="col-md-9">   
                @Html.DropDownList("chequeadoPor", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.chequeadoPor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
             <b class="control-label col-md-3">fechaChequeado</b>          
           <div class="col-md-9">   
                @Html.EditorFor(model => model.fechaChequeado, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fechaChequeado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
             <b class="control-label col-md-3">estado</b>          
           <div class="col-md-9">   
                @Html.EnumDropDownListFor(model => model.estado, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.estado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
             <b class="control-label col-md-3">observaciones</b>          
           <div class="col-md-9">   
                @Html.EditorFor(model => model.observaciones, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.observaciones, "", new { @class = "text-danger" })
            </div>
        </div>

        
        </div>
     </div>

        <div class="modal-footer">
            <a class="btn btn-warning hidden-print" data-dismiss="modal">Cancelar</a>
            <input class="btn btn-success hidden-print" type="submit" value="Aceptar" id="submit" />
        </div>
}


