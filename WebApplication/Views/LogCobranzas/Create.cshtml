@model WebApplication.LogCobranzas


@{
    ViewBag.Title = "Create";
}
<script src="../../AdminLTE/plugins/datetimepicker/js/bootstrap-datetimepicker.js"></script>
<link href="~/AdminLTE/plugins/datetimepicker/css/bootstrap-datetimepicker.css" rel="stylesheet" />
<script src="~/AdminLTE/plugins/datetimepicker/js/locales/bootstrap-datetimepicker.es.js"></script>

<script type="text/javascript">
		$('document').ready(function() {
		    $('#datepicker').datetimepicker({
		        autoclose: true,
		        format: 'dd/mm/yyyy hh:ii',
                language:'es'
		    });
		});
</script>
<div class="modal-header ">
    <a type="button" class="close" data-dismiss="modal" aria-hidden="true" href="">&times;</a>
    <h4 class="modal-title" id="myModalLabel">Agregar</h4>
</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="modal-body "> 
        <div class="form-horizontal">     
      
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        
        <div class="form-group">
            <b class="control-label col-md-3"> Cliente</b>
            <div class="col-md-9">
                @Html.DropDownList("idTercero", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idTercero, "", new { @class = "text-danger" })
            </div>
        </div>
            <div class="form-group">
                <b class="control-label col-md-3">Descripción</b>
                <div class="col-md-9">
                    @Html.TextAreaFor(model => model.observacion, new { @class = "form-control text-area", rows = "3" })
                    @Html.ValidationMessageFor(model => model.observacion, "", new { @class = "text-danger" })



                </div>
            </div>

            <div class="form-group">
                <b class="control-label col-md-3">Fecha</b>
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.fecha, new { @id = "datepicker", @datadateformat = "dd/mm/yyyy hh:ii", @readonly = true, Value = DateTime.Now.ToLocalTime().ToString("dd/MM/yyyy HH:mm") })
                    @Html.ValidationMessageFor(model => model.fecha)
                </div>
            </div>
          </div>
        </div>
    
        <div class="modal-footer">
            <a class="btn btn-warning hidden-print" data-dismiss="modal">Cancelar</a>
            <input class="btn btn-success hidden-print" type="submit" value="Aceptar" id="submit" />
        </div>
   }

