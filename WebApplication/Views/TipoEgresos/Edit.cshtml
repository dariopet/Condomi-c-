@model WebApplication.TipoEgresos


@{
    ViewBag.Title = "Edit";
}

<div class="modal-header ">
    <a type="button" class="close" data-dismiss="modal" aria-hidden="true" href="">&times;</a>
    <h4 class="modal-title" id="myModalLabel">Editar</h4>
</div>
 
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body ">
        <div class="form-horizontal">              
         @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.idTipoEgreso)
            @Html.HiddenFor(model => model.activo)

        

        <div class="form-group">
             <b class="control-label col-md-3">Descripción</b>          
           <div class="col-md-9">   
                @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
            </div>
        </div>      

            <div class="form-group">
                <b class="control-label col-md-3"> Vinculado A</b>
                <div class="col-md-9">
                    @Html.EnumDropDownListFor(model => model.vinculadoA, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.vinculadoA, "", new { @class = "text-danger" })
                </div>
            </div>

       

        <div class="form-group">
             <b class="control-label col-md-3">Límite para retención</b>          
           <div class="col-md-3">   
                @Html.EditorFor(model => model.limiteRetencion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.limiteRetencion, "", new { @class = "text-danger" })
            </div>
      
             <b class="control-label col-md-3">Porcentaje de retención</b>          
           <div class="col-md-3">   
                @Html.EditorFor(model => model.porcentajeRetencion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.porcentajeRetencion, "", new { @class = "text-danger" })
            </div>
        </div>

            <div class="form-group">
                <b class="control-label col-md-3">Concepto de retención</b>
                <div class="col-md-5">
                    @Html.EditorFor(model => model.conceptoRetencion, new { htmlAttributes = new { @class = "form-control"} })
                    @Html.ValidationMessageFor(model => model.conceptoRetencion, "", new { @class = "text-danger" })
                </div>

                <b class="control-label col-md-2">Código</b>
                <div class="col-md-2">
                    @Html.EditorFor(model => model.codigoRetencion, new { htmlAttributes = new { @class = "form-control"} })
                    @Html.ValidationMessageFor(model => model.codigoRetencion, "", new { @class = "text-danger" })
                </div>
            </div>

        
        </div>
     </div>

        <div class="modal-footer">
            <a class="btn btn-warning hidden-print" data-dismiss="modal">Cancelar</a>
            <input class="btn btn-success hidden-print" type="submit" value="Aceptar" id="submit" />
        </div>
}


