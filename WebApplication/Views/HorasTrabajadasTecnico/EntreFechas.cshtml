@model IEnumerable<WebApplication.HorasTrabajadasTecnico>
@{ Layout = null; }


@Scripts.Render("~/AdminLTE/plugins/jquery/jsB")
@Scripts.Render("~/AdminLTE/plugins/jquery-ui/jsB")
@Scripts.Render("~/AdminLTE/bootstrap/jsB")
@Scripts.Render("~/Scripts/modalform.js")
@Scripts.Render("~/AdminLTE/plugins/datatables/jsB")

<input hidden="hidden" id="texto1" value=4 />

<script src="../../Scripts/tablaexportar.js"></script>

<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>


<div class="box-body">
    <p>
        @Html.ActionLink("Agregar jornada", "Create", "HorasTrabajadasTecnico", null, new { data_modal = "", id = "btnCreate", @class = "btn btn-success hidden-print" })
    </p>
    <table class="table table-bordered table-striped" id="tabla">
        <thead>
            <tr>
                <th>
                    activo
                </th>
                <th>
                    Técnico
                </th>
                <th>
                    Fecha
                </th>
                <th>
                    Jornadas
                </th>
                <th>
                    Precio jornada
                </th>
                <th>
                    Adic. Dimmer
                </th>
                <th>
                    Adic. Seguidor
                </th>
                <th>
                    Creado por
                </th>

                <th>
                    Evento
                </th>
                <th>
                    Editado por
                </th>
                <th>
                    Acciones
                </th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>
                    activo
                </th>
                <th>
                    Técnico
                </th>
                <th>
                    Fecha
                </th>
                <th>
                    Jornadas
                </th>
                <th>
                    Precio jornada
                </th>
                <th>
                    Adic. Dimmer
                </th>
                <th>
                    Adic. Seguidor
                </th>
                <th>
                    Creado por
                </th>

                <th>
                    Evento
                </th>
                <th>
                    Editado por
                </th>
                <th>
                    Acciones
                </th>
            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        1
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Terceros.nombre)
                    </td>
                    <td>
                        @Html.Raw(item.fecha.ToShortDateString()).ToHtmlString()

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cantidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.precioJornada)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.dimmer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.seguidor)
                    </td>
                    @*<td>
                            @{
                                if (item.pagadas == true)
                                {
                                    @Html.Raw("Si").ToHtmlString()
                                }
                                else
                                {
                                    @Html.Raw("No").ToHtmlString()
                                }
                            }
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.AspNetUsers.NameIdentifier)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.Eventos.descripcion)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Editado.NameIdentifier) -
                        @Html.DisplayFor(modelItem => item.fechaEditado)
                    </td>
                    <td>
                        @Html.Raw(@Html.ActionLink("XXX", "Edit", "HorasTrabajadasTecnico", new { id = item.idHorasTrabajadasTecnico }, new { data_modal = "", id = "btnEdit", @class = "btn btn-warning hidden-print", @style = "margin-right:3px; margin-bottom:3px", @title = "Editar" }).ToHtmlString().Replace("XXX", "<i class='fa fa-pencil'></i>"))
                        @Html.Raw(@Html.ActionLink("XXX", "Delete", "HorasTrabajadasTecnico", new { id = item.idHorasTrabajadasTecnico }, new { data_modal = "", id = "btnDelete", @class = "btn btn-danger hidden-print", @style = "margin-right:3px; margin-bottom:3px", @title = "Anular" }).ToHtmlString().Replace("XXX", "<i class='fa fa-remove'></i>"))

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>