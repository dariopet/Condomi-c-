            @*<a href="@Url.Action("Register", "Account")" class="text-center">Registrarse</a>*@
        </div>
    </div>

    @Scripts.Render("~/AdminLTE/plugins/jquery/jsB")
    @Scripts.Render("~/AdminLTE/bootstrap/jsB")
    @Scripts.Render("~/AdminLTE/plugins/icheck/jsB")
    @Scripts.Render("~/AdminLTE/plugins/jquery-validate/jsB")
