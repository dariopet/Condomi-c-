@model WebApplication.Equipos

@{
    ViewBag.Title = "Edit";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="modal-header ">
    <a type="button" class="close" data-dismiss="modal" aria-hidden="true" href="">&times;</a>
    <h4 class="modal-title" id="myModalLabel">Editar equipo</h4>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-body ">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.idEquipo)
            @Html.HiddenFor(model => model.activo)

            <div class="form-group">
                <b class="control-label col-md-3"> Modelo</b>
                <div class="col-md-5">
                    @Html.DropDownList("idModelo", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.idModelo, "", new { @class = "text-danger" })
                </div>

                <b class="control-label col-md-2">Número</b>
                <div class="col-md-2">
                    @Html.EditorFor(model => model.numero, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.numero, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <b class="control-label col-md-3"> Número de serie</b>

                <div class="col-md-9">
                    @Html.EditorFor(model => model.serialNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.serialNumber, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <b class="control-label col-md-3">Código de barra</b>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.codigoBarras, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.codigoBarras, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <b class="control-label col-md-3"> Estado</b>
                <div class="col-md-9">
                    @Html.EnumDropDownListFor(model => model.estado, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.estado, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <b class="control-label col-md-3">Ubicación</b>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.ubicacion , new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ubicacion , "", new { @class = "text-danger" })
                </div>
            </div>

            @*<div class="form-group">
                    @Html.LabelFor(model => model.activo, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.activo)
                            @Html.ValidationMessageFor(model => model.activo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

            <div class="form-group">
                @Html.LabelFor(model => model.idModelo, "ModelosEquipos_idModelo", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("ModelosEquipos_idModelo", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.idModelo, "", new { @class = "text-danger" })
                </div>
            </div>*@            
        </div>
    </div>

        <div class="modal-footer">
            <a class="btn btn-warning hidden-print" data-dismiss="modal">Cancelar</a>
            <input class="btn btn-success hidden-print" type="submit" value="Aceptar" id="submit" />
        </div>
}